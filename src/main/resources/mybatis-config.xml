<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="useColumnLabel" value="true" />
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.zqb.main.entity.User" alias="user"></typeAlias>
        <typeAlias type="com.zqb.main.entity.Message" alias="message"></typeAlias>
    </typeAliases>


    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.EnumTypeHandler" javaType="com.zqb.main.entity.UserType"></typeHandler>
    </typeHandlers>

</configuration>